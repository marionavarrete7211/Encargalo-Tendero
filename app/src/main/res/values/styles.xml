<resources xmlns:ns2="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/blue</item>
        <item name="android:statusBarColor">@color/blue</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="height">1dp</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />


    <!--Estilos de textos-->
    <style name="txtstyle_content">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/blackPrimary</item>
    </style>
    <style name="txtstyle_content_bold">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/blackPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="txtstyle_title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/blackPrimary</item>
    </style>
    <style name="txtstyle_white">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/whitePrimary</item>
    </style>
    <style name="txtstyle_blue">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/blue_600</item>
    </style>
    <style name="txtstyle_h1">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">27sp</item>
        <item name="android:textColor">@color/blackPrimary</item>
    </style>

    <!--Estilos de textos NUEVOS-->
    <style name="textcolor1">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="textcolor2">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Headline_5" parent="textcolor1">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Headline_6" parent="textcolor1">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="Subtitle_1" parent="textcolor1">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.05</item>
    </style>
    <style name="Subtitle_2" parent="textcolor1">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.05</item>
    </style>
    <style name="Body_1" parent="textcolor1">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.05</item>
    </style>
    <style name="Body_2" parent="textcolor1">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.03</item>
    </style>
    <style name="Body_3" parent="textcolor1">
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.03</item>
    </style>
    <style name="Button" parent="textcolor1">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.12</item>
    </style>


    <style name="Body_2_b">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <!--Botones NUEVO-->
    <style name="Contained_button_blue" parent="Button">
        <item name="android:background">@drawable/containedbtn_blue</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Contained_button_green" parent="Button">
        <item name="android:background">@drawable/containedbtn_green</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Outlined_button_blue" parent="Button">
        <item name="android:background">@drawable/outline_blue</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    <style name="Text_button_red" parent="Button">
        <item name="android:background">@drawable/textbutton</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    <style name="Text_button_blue" parent="Button">
        <item name="android:background">@drawable/textbutton</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    <style name="Outlined_buttonXL_black" parent="Body_1">
        <item name="android:background">@drawable/outlinebtnxl_black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:drawableRight">@drawable/blackflecha</item>
    </style>
    <style name="Outlined_buttonXL_green" parent="Body_1">
        <item name="android:background">@drawable/outlinebtnxl_green</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:drawableRight">@drawable/greenflecha</item>
    </style>
    <style name="Outlined_buttonXL_blue" parent="Body_1">
        <item name="android:background">@drawable/outlinebtnxl_blue</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:drawableRight">@drawable/blueflecha</item>
    </style>

    <!--Inputs NUEVO-->
    <style name="textinput" parent="Body_2">
        <item name="android:textColor">@color/grey_dark</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
    <style name="input" parent="Body_2">
        <item name="android:background">@drawable/inputstyle</item>
    </style>
    <style name="spinner" parent="Body_2">
        <item name="android:background">@drawable/outline_spinner</item>
    </style>
    <style name="spinner2" parent="Body_2">
        <item name="android:background">@drawable/outline_spinner2</item>
    </style>

</resources>