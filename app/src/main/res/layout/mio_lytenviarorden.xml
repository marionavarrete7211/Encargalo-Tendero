<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="@dimen/activity_margin"
    android:focusable="true"
    android:clickable="true"
    android:background="@drawable/outline_textinputedittext"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/mio_varstrenviarorden1"
            android:textColor="@color/blackPrimary"/>



        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/mio_eobtncancelar"
                android:layout_width="139dp"
                android:layout_height="match_parent"
                android:text="@string/mio_varstrenviarorden3"

                android:layout_marginHorizontal="20dp"
                android:background="@drawable/containedbutton_white"
                android:textColor="@color/blue_600"/>

            <Button
                android:id="@+id/mio_eobtnaceptar"
                android:layout_width="139dp"
                android:layout_height="match_parent"
                android:text="@string/mio_varstrenviarorden2"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/containedbutton_blue"
                android:textColor="@color/whitePrimary"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>