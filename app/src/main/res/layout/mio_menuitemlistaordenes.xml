<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:clickable="true"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/outline_textinputedittext"
        android:orientation="vertical"
        android:layout_marginBottom="10dp">

        <!--Titulo id Orden-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/mio_varstrmisordenesprincipal3"
                android:textColor="@color/blackPrimary" />
            <TextView
                android:id="@+id/mio_mop_txtIdOrden"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="00000000"
                android:layout_marginLeft="5dp" />

        </LinearLayout>

        <!--Titulo nombre de cliente-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mio_varstrmisordenesprincipal4"
                android:textColor="@color/blackPrimary"
                />

            <TextView
                android:id="@+id/mio_mop_txtNombres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="00000000"
                android:layout_marginLeft="5dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mio_varstrmisordenesprincipal5"
                android:textColor="@color/blackPrimary"
                android:paddingTop="10dp"/>
            <TextView
                android:id="@+id/mio_mop_txtOrdCreada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="00/00/0000"
                android:layout_marginLeft="10dp"
                android:textColor="@color/blackPrimary"
                android:paddingTop="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mio_varstrmisordenesprincipal6"
                android:textColor="@color/blackPrimary"
                android:paddingTop="10dp"/>

            <TextView
                android:id="@+id/mio_mop_txtOrdEstado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="00/00/0000"
                android:layout_marginLeft="10dp"
                android:textColor="@color/blackPrimary"
                android:paddingTop="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/mio_moptxtdetalle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="@string/mio_varstrmisordenesprincipal7"
                android:textColor="@color/green_800" />

            <TextView
                android:id="@+id/mio_moptxtdetallechat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="@string/mio_varstrmisordenesprincipal8"
                android:textColor="@color/green_800" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>