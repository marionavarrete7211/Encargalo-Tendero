<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".tendero.activity_is_actverificacioncodigo"
    android:layout_margin="@dimen/activity_margin"
    android:focusable="true"
    android:clickable="true"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/is_varstrverificacioncodigo1"
            android:layout_marginTop="36dp"
            android:textColor="@color/blackPrimary"
            android:textAllCaps="false"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/is_varstrverificacioncodigo2"
            android:layout_marginTop="36dp"
            android:textColor="@color/blackPrimary"
            android:textAllCaps="false"
            android:gravity="center"/>
        <EditText
            android:id="@+id/is_vcedtcodigoverificacion"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:background="@color/grey"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:maxLength="6"/>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingTop="40dp"
            android:gravity="center"
            android:layout_marginTop="350dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/is_vcbtncontinuar"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:background="@drawable/containedbutton_white"
                android:text="@string/is_varstrverificacioncodigo3"
                android:textAllCaps="true"
                android:textColor="@color/blue_600"
                android:shadowRadius="10"

                />

            <Button
                android:id="@+id/is_vcbtnreenviarcodigo"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginLeft="40dp"
                android:background="@drawable/containedbutton_blue"
                android:text="@string/is_varstrverificacioncodigo4"
                android:textAllCaps="true"
                android:textColor="@color/whitePrimary"/>
        </LinearLayout>


    </LinearLayout>
</ScrollView>