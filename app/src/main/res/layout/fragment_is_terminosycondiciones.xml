<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_margin="0dp"
    android:layout_marginBottom="0dp"
    tools:context=".fragment_is_terminosycondiciones"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="0dp"
        android:layout_marginBottom="0dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/is_tyctxtterminosycondiciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/is_varstrterminosycondiciones1"
            android:textColor="@color/blackPrimary"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:orientation="vertical">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/is_txtcontenidotyc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_marginTop="30dp"
                        android:text="@string/is_varstrterminosycondiciones2"
                        android:textColor="@color/blackPrimary"
                        android:justificationMode="inter_word"/>
                    <TextView
                        android:id="@+id/is_txtpoliticas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="@string/is_varstrterminosycondiciones3"
                        android:textColor="@color/blackPrimary"
                        android:textStyle="bold"
                        android:textSize="20dp"/>
                    <TextView
                        android:id="@+id/is_txtcontenidopoliticas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_marginTop="30dp"
                        android:text="@string/is_varstrterminosycondiciones2"
                        android:textColor="@color/blackPrimary"
                        android:justificationMode="inter_word"/>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">
        <Button
            android:id="@+id/is_tycbtncerrarterminos"
            android:layout_width="@dimen/btn_type03_width"
            android:layout_height="wrap_content"
            android:text="@string/is_varstrterminosycondiciones5"
            android:layout_marginTop="10dp"
            style="@style/Text_button_red"/>
    </LinearLayout>
    </LinearLayout>
</FrameLayout>
