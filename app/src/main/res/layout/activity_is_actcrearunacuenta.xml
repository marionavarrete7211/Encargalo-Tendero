        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Movil/Whatsapp"
            android:layout_marginTop="20dp"
            android:textSize="15dp"
            android:textColor="@color/grey_600"
            android:layout_marginLeft="40dp"
            android:autoSizeMaxTextSize="12dp"   />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <Spinner
                android:id="@+id/is_cuccodpais"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:spinnerMode="dropdown"
                android:entries="@array/is_qpkitemspinnercodpais"
                android:background="@drawable/outline_spinner" />


            <EditText
                android:id="@+id/is_cucedtnumtelefono"
                android:layout_width="190dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@color/grey"
                android:gravity="center"
                android:inputType="phone"
                android:maxLength="10"/>
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Contrase単a"
            android:layout_marginTop="20dp"
            android:textSize="15dp"
            android:textColor="@color/grey_600"
            android:layout_marginLeft="40dp"
            android:autoSizeMaxTextSize="12dp"
            />

        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="290dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:background="@color/grey"
            android:hint="Al menos 6 caracteres"
            android:inputType="textPassword" />
        <Button
            android:id="@+id/showPasswordButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mostrar contrase単a" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Repetir Contrase単a"
            android:layout_marginTop="20dp"
            android:textSize="15dp"
            android:textColor="@color/grey_600"
            android:layout_marginLeft="40dp"
            android:autoSizeMaxTextSize="12dp"
            />


        <EditText
            android:id="@+id/repeatPasswordEditText"
            android:layout_width="290dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:hint="Al menos 6 caracteres"
            android:background="@color/grey"
            android:inputType="textPassword" />
        <Button
            android:id="@+id/showPasswordButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mostrar contrase単a" />



        <Button
            android:id="@+id/is_cucbtnRegistrarse"
            android:layout_width="@dimen/btn_type04_width"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:background="@drawable/containedbtn_blue"
            android:text="@string/is_varstrcrearunacuenta7"
            android:textAllCaps="true"
            android:textColor="@color/whitePrimary"
            android:clickable = "false"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            android:gravity="center">

            <CheckBox
                android:id="@+id/is_cucchkbcheckterminos"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="35dp"/>

            <TextView
                android:id="@+id/is_cucbtnterminosycondiciones"
                android:layout_width="230dp"
                android:layout_height="80dp"
                android:layout_marginLeft="5dp"
                android:clickable="true"
                android:layout_marginTop="10dp"
                android:text="@string/is_varstrcrearunacuenta9"
                android:textAllCaps="false"
                android:textColor="@color/blue_600"
                android:contextClickable="true"
                android:textSize="15dp" />

        </LinearLayout>

